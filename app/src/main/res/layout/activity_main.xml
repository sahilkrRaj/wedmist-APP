<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="Wedmist">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                <ImageView
                    android:foreground="@drawable/vector"
                    android:layout_width="match_parent"
                    android:layout_height="371dp"
                    android:src="@drawable/ser_image"
                    android:scaleType="fitXY"/>
                
                <TextView
                    android:background="@drawable/underline"
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FITNESS &amp; HEALTHCARE"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="2dp"
                    android:textSize="22sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="250dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let's Take A Step Towards Peace And \n                            Selfcare"
                    android:textColor="@color/white"
                    android:paddingTop="2dp"
                    android:textSize="14sp"
                    android:layout_below="@id/service"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    />
            </RelativeLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/tracker"
                android:background="#F2F6FF"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/tracker"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2115+ Fitness Services Booked in last 365 days"
                    android:layout_marginLeft="47dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Fitness &amp; Healthcare Services"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_below="@id/tracker"/>

            <LinearLayout
                android:id="@+id/category"
                android:layout_below="@id/text1"
                android:layout_width="match_parent"
                android:layout_height="247dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="123.5dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:background="#F2F6FF"
                        android:layout_margin="0.5dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/pic1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp"/>
                        <TextView
                            android:layout_below="@id/img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yoga Trainer"
                            android:layout_marginTop="6dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:background="#F2F6FF"
                        android:layout_margin="0.5dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/pic1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp"/>
                        <TextView
                            android:layout_below="@id/img2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yoga Trainer"
                            android:layout_marginTop="6dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:background="#F2F6FF"
                        android:layout_margin="0.5dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/pic1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp"/>
                        <TextView
                            android:layout_below="@id/img3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yoga Trainer"
                            android:layout_marginTop="6dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="123.5dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:background="#F2F6FF"
                        android:layout_margin="0.5dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/pic1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp"/>
                        <TextView
                            android:layout_below="@id/img4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yoga Trainer"
                            android:layout_marginTop="6dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="#F2F6FF"
                        android:layout_margin="0.5dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/pic1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp"/>
                        <TextView
                            android:layout_below="@id/img5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yoga Trainer"
                            android:layout_marginTop="6dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="#F2F6FF"
                        android:layout_margin="0.5dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_below="@id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                
                <TextView
                    android:id="@+id/see_all_services"
                    android:background="@drawable/underline1"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4B6EE8"
                    android:text="See all Services"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"/>
                
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_baseline_navigate_next_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="14dp"/>
                <RelativeLayout
                    android:id="@+id/line"
                    android:layout_below="@id/see_all_services"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#EEEEEE">

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/wedmist_is_secure"
                    android:layout_below="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="462dp">

                    <ImageView
                        android:id="@+id/security"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/security"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wedmist is Safe"
                        android:textSize="18dp"
                        android:textColor="#4B6EE8"
                        android:layout_marginLeft="7dp"
                        android:layout_toRightOf="@id/security"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Our Service experts who adhere to safety"
                        android:layout_marginLeft="18dp"
                        android:layout_below="@id/security"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"/>

                    <HorizontalScrollView
                        android:id="@+id/horizontal_scroll"
                    android:scrollbars="none"
                    android:layout_below="@id/security"
                    android:layout_marginTop="39dp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:background="@drawable/wedmist_is_safe"
                            android:layout_marginLeft="18dp"
                            android:layout_width="210dp"
                            android:layout_height="90dp">
                            <ImageView
                                android:id="@+id/mask"
                                android:padding="10dp"
                                android:src="@drawable/mask"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circle"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="15dp"/>
                            <TextView
                                android:id="@+id/face_mask"
                                android:layout_toRightOf="@+id/mask"
                                android:layout_marginLeft="14dp"
                                android:layout_marginTop="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Face Mask"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_below="@+id/face_mask"
                                android:layout_toRightOf="@+id/mask"
                                android:layout_marginLeft="14dp"
                                android:layout_marginTop="4dp"
                                android:textSize="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Use of masks,gloves,\nface shield, sanitizers"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto"
                                />

                        </RelativeLayout>
                        <RelativeLayout
                            android:background="@drawable/wedmist_is_safe"
                            android:layout_marginLeft="18dp"
                            android:layout_width="210dp"
                            android:layout_height="90dp">
                            <ImageView
                                android:id="@+id/tempe"
                                android:padding="10dp"
                                android:src="@drawable/mask"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circle"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="15dp"/>
                            <TextView
                                android:id="@+id/temperature"
                                android:layout_toRightOf="@+id/tempe"
                                android:layout_marginLeft="14dp"
                                android:layout_marginTop="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Face Mask"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_below="@+id/temperature"
                                android:layout_toRightOf="@+id/tempe"
                                android:layout_marginLeft="14dp"
                                android:layout_marginTop="4dp"
                                android:textSize="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Use of masks,gloves,\nface shield, sanitizers"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto"
                                />

                        </RelativeLayout>
                        <RelativeLayout
                            android:background="@drawable/wedmist_is_safe"
                            android:layout_marginLeft="18dp"
                            android:layout_width="210dp"
                            android:layout_height="90dp">
                            <ImageView
                                android:id="@+id/sani"
                                android:padding="10dp"
                                android:src="@drawable/mask"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circle"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="15dp"/>
                            <TextView
                                android:id="@+id/sanitizer"
                                android:layout_toRightOf="@+id/sani"
                                android:layout_marginLeft="14dp"
                                android:layout_marginTop="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Face Mask"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_below="@+id/sanitizer"
                                android:layout_toRightOf="@+id/sani"
                                android:layout_marginLeft="14dp"
                                android:layout_marginTop="4dp"
                                android:textSize="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Use of masks,gloves,\nface shield, sanitizers"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="182dp"
                        android:layout_below="@id/horizontal_scroll"
                        android:layout_marginTop="35dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/ad_banner"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/wedmist_is_secure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include layout="@layout/customer_review"/>

                </RelativeLayout>

                </RelativeLayout>






        </RelativeLayout>





    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>