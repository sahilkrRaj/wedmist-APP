<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/regular_services_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regular Services for You"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/regular_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get upto 40% off on Home Salon services"
        android:layout_below="@+id/regular_services_header"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regular_sub_text"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="18dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:background="@drawable/regular_service_box"
                    android:layout_marginBottom="10dp">
                    <ImageView

                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginVertical="7dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catering"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="76dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:background="@drawable/regular_service_box"
                    android:layout_marginBottom="10dp">
                    <ImageView

                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginVertical="7dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/black"/>
